      aText.Add(String$(80, CStr(I) & "."))
    Next
    TextEditor1.EnterDiffMode([3, 4, 12, 2, 20, 6], ["0": aText, "3": ["Diff√©rence", "sur plusieurs lignes", "c'est possible ?"]])
  Endif

End

