Private $hFont As Font

Private Function Font_Read() As Font

  Return $hFont

End

Private Sub Font_Write(Value As Font)

  If Value Then
    $hFont = Value.Copy()
    $hFont.Modified = True
  Else
    $hFont = Null
  Endif

