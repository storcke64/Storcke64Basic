Static Private Sub Open(sIcon As String, sTitle As String, sText As String, Optional sButton1 As String, sButton2 As String, sButton3 As String) As Integer
  
  Dim hMessage As FMessage
  Dim vVal As Variant
  
  hMessage = New FMessage
  hMessage.Title = sTitle
  hMessage.SetIcon(sIcon)
  hMessage.SetText(sText)
  hMessage.SetButton(sButton1, sButton2, sButton3)
  
  vVal = hMessage.ShowModal(Null)
  If IsNull(vVal) Then
    If sButton3 Then
      vVal = 3
    Else If sButton2 Then
      vVal = 2
    Else
      vVal = 1
    Endif
  Endif
  
  Return vVal
  
End


Static Public Sub _call(Text As String, Optional Button As String) As Integer

  Return Open("info", ("Information"), Text, Button)

End

Static Public Sub Info(Text As String, Optional Button As String) As Integer
  
  Return _call(Text, Button)
  
End

Static Public Sub Warning(Text As String, Optional Button1 As String, Button2 As String, Button3 As String) As Integer
  
  Return Open("warning", ("Warning"), Text, Button1, Button2, Button3)
  
End

Static Public Sub Error(Text As String, Optional Button As String) As Integer
  
  Return Open("error", ("Error"), Text, Button)
  
End

Static Public Sub Question(Text As String, Optional Button1 As String, Button2 As String, Button3 As String) As Integer
  
  Return Open("question", ("Question"), Text, Button1, Button2, Button3)
  
End


