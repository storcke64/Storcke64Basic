Public Sub Form_Open()

  Dim sPath As String

  sPath = $sPath

  If Left(sPath) = "$" Then sPath = Project.GetSpecialDir(sPath)
  If Not sPath Then sPath = Project.Dir
 
  fprInfo.Path = sPath
 
  Me.Title = Subst(("'&1' properties"), File.Name(sPath))
  
